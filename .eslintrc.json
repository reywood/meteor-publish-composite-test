{
    "extends": "airbnb",
    "globals": {
        "Package": true,
        "Npm": true,
        "Tinytest": true
    },
    "rules": {
        "import/extensions": 0,
        "import/no-absolute-path": 0,
        "import/no-unresolved": 0,
        "indent": ["error", 4],
        "max-len": ["error", 120],
        "no-param-reassign": 0,
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "no-underscore-dangle": 0
    },
    "settings": {
        "import/core-modules": [
            "meteor/meteor",
            "meteor/mongo",
            "meteor/underscore",
            "meteor/practicalmeteor:mocha",
            "meteor/practicalmeteor:chai",
            "meteor/reywood:publish-composite",
            "meteor/templating"
        ]
    }
}
